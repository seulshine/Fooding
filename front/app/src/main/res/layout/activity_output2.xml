<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OutputActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_thumb"
        android:src="@drawable/chicken"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spn_type"
            android:layout_marginLeft="40dp"
            android:layout_centerHorizontal="true"
            android:layout_width="160dp"
            android:layout_height= "wrap_content"
            android:textSize="25dp"
            android:dropDownWidth="140dp"
            android:overlapAnchor="false"
            android:padding="5dp" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            android:layout_marginLeft="85dp"
            android:text="업로드"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_main_name"
            android:layout_marginLeft="43dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="음식명"
            />
        <TextView
            android:id="@+id/tv_main_calorie"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="1인분당 열량"/>

        <TextView
            android:id="@+id/tv_main_carbs"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="탄수화물"/>
        <TextView
            android:id="@+id/tv_main_proteins"
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="단백질"
            />
        <TextView
            android:id="@+id/tv_main_fats"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="지방"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

</LinearLayout>