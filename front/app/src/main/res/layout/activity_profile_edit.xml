<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileEditActivity">

    <TextView
        android:id="@+id/iv_logo"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:tint="@android:color/white"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_below="@+id/iv_logo" />

    <EditText
        android:id="@+id/et_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_below="@+id/iv_logo"
        android:inputType="textEmailAddress"
        android:hint="이메일"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_profile_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_below="@+id/et_profile_email"
        android:inputType="text"
        android:hint="닉네임" />

    <EditText
        android:id="@+id/et_profile_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_below="@+id/et_profile_nickname"
        android:inputType="numberDecimal"
        android:hint="나이" />

    <LinearLayout
        android:id="@+id/layout_profile_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="13dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/et_profile_age"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="성별"
            android:textSize="17sp"/>

        <Spinner
            android:id="@+id/spinner_proflie_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_below="@+id/layout_profile_gender"
        android:text="회원가입"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_login_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:text="로그인 페이지로 이동"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textColor="@android:color/black"/>

</RelativeLayout>