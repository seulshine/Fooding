<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp">

    <TextView
        android:id="@+id/tv_main_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음식 이름"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_add_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="200kcal"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_main_add_name"
        app:layout_constraintStart_toEndOf="@+id/tv_main_add_name" />

    <EditText
        android:id="@+id/et_main_add_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="1"
        android:textSize="12sp"
        android:textAlignment="center"
        android:hint="수량"
        android:inputType="numberDecimal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_main_add_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_main_add_total_calories" />

    <TextView
        android:id="@+id/tv_main_add_total_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="200kcal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_main_add_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_main_add_delete" />

    <TextView
        android:id="@+id/tv_main_add_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="삭제"
        app:layout_constraintBottom_toBottomOf="@+id/tv_main_add_name"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>